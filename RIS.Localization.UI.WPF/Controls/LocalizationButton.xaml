<ComboBox x:Class="RIS.Localization.UI.WPF.Controls.LocalizationButton"
          d:DataContext="{d:DesignInstance local:LocalizationButton}"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
          xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
          xmlns:local="clr-namespace:RIS.Localization.UI.WPF.Controls"
          xmlns:localization="clr-namespace:RIS.Localization;assembly=RIS.Localization"
          mc:Ignorable="d" 
          d:DesignHeight="450" d:DesignWidth="800"
          ItemsSource="{Binding Path=(localization:LocalizationManager.Localizations), Mode=OneWay}"
          DisplayMemberPath="Value.CultureNativeName"
          Margin="5"
          SelectionChanged="Button_SelectionChanged">
</ComboBox>
