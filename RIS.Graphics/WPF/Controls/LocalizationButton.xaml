<ComboBox x:Class="RIS.Graphics.WPF.Controls.LocalizationButton"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
          xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
          xmlns:local="clr-namespace:RIS.Graphics.WPF.Controls"
          xmlns:localization="clr-namespace:RIS.Graphics.WPF.Localization"
          mc:Ignorable="d" 
          d:DesignHeight="450" d:DesignWidth="800"
          ItemsSource="{Binding Source={x:Static localization:LocalizationManager.Localizations}}"
          DisplayMemberPath="Value.CultureNativeName"
          Margin="5"
          SelectionChanged="Button_SelectionChanged">
</ComboBox>
